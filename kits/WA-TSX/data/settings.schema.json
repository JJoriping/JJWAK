{
  "title": "root",
  "type": "object",
  "required": [
    "cookie-secret",
    "crypto-secret",
    "language-support",
    "port"
  ],
  "properties": {
    "application": {
      "type": "object"
    },
    "cookie-age": {
      "type": "integer"
    },
    "cookie-secret": {
      "type": "string"
    },
    "crypto-secret": {
      "type": "string"
    },
    "https": {
      "type": "object",
      "required": [
        "key",
        "cert"
      ],
      "properties": {
        "key": {
          "type": "string",
          "description": "The path of SSL private key file related to the project data directory."
        },
        "cert": {
          "type": "string",
          "description": "The path of SSL signed certificate file related to the project data directory."
        }
      }
    },
    "language-support": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "port": {
      "type": "number"
    }
  }
}